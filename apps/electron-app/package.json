{
  "name": "@mask-cut/electron-app",
  "productName": "Mask-Cut",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "node ./scripts/clean.js",
    "build": "pnpm run clean && pnpm exec tsc -p tsconfig.json && pnpm exec tsc -p tsconfig.renderer.json && node ./scripts/fixRendererImports.mjs && pnpm exec cpx \"src/renderer/**/*.html\" dist/renderer && pnpm exec cpx \"../../assets/**/*\" dist/assets",
    "start": "pnpm run build && electron .",
    "dev": "pnpm run build && electron .",
    "build:win": "pnpm run build && electron-builder --win --x64 --dir",
    "lint": "tsc --noEmit",
    "test": "node --require ts-node/register --test src/**/*.test.ts",
    "test:win-build": "TS_NODE_PROJECT=win-build/tsconfig.json node --require ts-node/register --test win-build/test/**/*.ts"
  },
  "build": {
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*",
      "dist/assets/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "@mask-cut/text-llm-core": "workspace:*"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "electron": "^28.2.2",
    "electron-builder": "^25",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  }
}
